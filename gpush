cd ~/workflow
changes=$(git status | grep scripts/ | rev | cut -d "/" -f 1 | rev | xargs)
read -p "Do you want to apply changes to all of these scripts: $changes: " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]
then
    echo "Adding..." 
    git add -Ae

    cho "Committing..."
    git commit -m "$(date)"

    echo "Pushing..."
    git push
fi
