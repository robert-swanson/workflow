cd ~/workflow
changes=$(git status --porcelain | sed s/^...// | xargs)
echo $changes
read -p "Do you want to apply changes to all of these scripts? [y/N] " -n 1 -r
if [[ $REPLY =~ ^[Yy]$ ]]
then
    echo "Adding..." 
    git add -A

    echo "Committing..."
    git commit -m "$changes"

    echo "Pushing..."
    git push
fi
