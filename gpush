cd ~/workflow
echo $(git status --porcelain | sed s/^...// | xargs)
read -p "Do you want to apply changes to all of these scripts? [y/N] " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]
then
    echo "Adding..." 
    git add -Ae

    echo "Committing..."
    git commit -m "$(date)"

    echo "Pushing..."
    git push
fi
